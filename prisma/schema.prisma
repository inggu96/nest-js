

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  author    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Phone {
    id Int @id  @default(autoincrement())
    number String
    type String
}

model User{ 
  id Int @id  @default(autoincrement())
  name      String?
  email     String?   @unique
  password  String?
  birth     String?
  nickname  String?
}

model Movie {
  id                 Int      @id
  adult              Boolean
  backdropPath       String?  @map("backdrop_path")
  genres             Genre[]  @relation("MovieToGenre")
  originalLanguage   String   @map("original_language")
  originalTitle      String   @map("original_title")
  overview           String
  popularity         Float
  posterPath         String   @map("poster_path")
  releaseDate        DateTime @map("release_date")
  title              String
  video              Boolean
  voteAverage        Float    @map("vote_average")
  voteCount          Int      @map("vote_count")

  @@map("movies")
}

model Genre {
  id     Int    @id
  name   String
  movies Movie[] @relation("MovieToGenre")
}

enum UserType{
  ADMIN
  USER
}

enum ReportType{
  PENDING
  IGNORE
  USER_DELETE
}

enum UserGender{
  MALE
  FEMALE
}